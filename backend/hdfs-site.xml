<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value>
    </property>
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///hadoop/dfs/data</value>
    </property>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    <property>
        <name>ipc.maximum.data.length</name>
        <value>268435456</value> <!-- 256 MB -->
    </property>
    <property>
        <name>dfs.client.max.block.acquire.failures</name>
        <value>10</value> <!-- Increase retry attempts for block acquisition -->
    </property>
    <property>
        <name>dfs.client.block.write.locate.max.retries</name>
        <value>10</value> <!-- Increase retry attempts for block location -->
    </property>
</configuration>